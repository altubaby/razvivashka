<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- Базовая тема приложения -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryDark">@color/purple_700</item>
            <item name="colorAccent">@color/teal_200</item>
            <item name="android:windowBackground">@drawable/gradient_background</item>
        </style>

    <!-- Стиль для карточек -->
    <style name="CardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Стиль для основных кнопок -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для второстепенных кнопок -->
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для заголовков -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для подзаголовков -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для полей ввода -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>
</resources>